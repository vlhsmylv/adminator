<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Schema Viewer</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      // Client-side filtering based on URL hash
      function filterSchemas() {
        const hash = window.location.hash.substring(1); // Get the hash without the #
        const sections = document.querySelectorAll(".schema-section");

        // Show/hide schema sections
        sections.forEach((section) => {
          if (hash && section.id !== hash) {
            section.style.display = "none"; // Hide non-matching sections
          } else {
            section.style.display = "block"; // Show matching or all sections
          }
        });
      }

      // Run the filter on page load and when hash changes
      window.addEventListener("DOMContentLoaded", filterSchemas);
      window.addEventListener("hashchange", filterSchemas);
    </script>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <div class="flex h-screen">
      <!-- Sidebar -->
      <div class="w-1/5 bg-gray-800 text-white p-4 overflow-y-auto">
        <h2 class="text-lg font-bold mb-4">Schemas</h2>
        <ul class="space-y-2">
          <!-- Add "All" option to view all schemas -->
          <li>
            <a href="/" class="block py-2 px-4 rounded hover:bg-gray-700"
              >All</a
            >
          </li>
          <% Object.keys(schema).forEach((key) => { %>
          <li>
            <a
              href="#<%= key %>"
              class="block py-2 px-4 rounded hover:bg-gray-700"
              ><%= key %></a
            >
          </li>
          <% }) %>
        </ul>
      </div>

      <!-- Main Content -->
      <div class="w-4/5 p-8 overflow-y-auto">
        <h1 class="text-2xl font-bold mb-6">Parsed Schema</h1>
        <% Object.keys(schema).forEach((key) => { %>
        <div id="<%= key %>" class="schema-section mb-8">
          <h2 class="text-xl font-bold mb-4"><%= key %></h2>
          <p class="text-gray-600 mb-2">
            <strong>Description:</strong>
            <%= schema[key].description || "No description available" %>
          </p>
          <table
            class="table-auto w-full border-collapse border border-gray-300"
          >
            <thead>
              <tr class="bg-gray-200">
                <th class="border border-gray-300 px-4 py-2">Field</th>
                <th class="border border-gray-300 px-4 py-2">Type</th>
                <th class="border border-gray-300 px-4 py-2">Primary</th>
                <th class="border border-gray-300 px-4 py-2">Autogenerated</th>
                <th class="border border-gray-300 px-4 py-2">Min</th>
                <th class="border border-gray-300 px-4 py-2">Max</th>
              </tr>
            </thead>
            <tbody>
              <% schema[key].fields.forEach((field) => { %>
              <tr>
                <td class="border border-gray-300 px-4 py-2">
                  <%= field.name %>
                </td>
                <td class="border border-gray-300 px-4 py-2">
                  <%= field.type %>
                </td>
                <td class="border border-gray-300 px-4 py-2">
                  <%= field.isPrimary ? "Yes" : "No" %>
                </td>
                <td class="border border-gray-300 px-4 py-2">
                  <%= field.isAutogenerated ? "Yes" : "No" %>
                </td>
                <td class="border border-gray-300 px-4 py-2">
                  <%= field.minChar !== null ? field.minChar : "N/A" %>
                </td>
                <td class="border border-gray-300 px-4 py-2">
                  <%= field.maxChar !== null ? field.maxChar : "N/A" %>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
